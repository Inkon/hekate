<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
          http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>hekate</id>

    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <!-- API documentation -->
        <fileSet>
            <directory>${project.build.directory}/site</directory>
            <outputDirectory>docs</outputDirectory>
        </fileSet>

        <!-- Configs.  -->
        <fileSet>
            <directory>${basedir}/hekate-standalone/src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>

        <!-- Scripts.  -->
        <fileSet>
            <directory>${basedir}/hekate-standalone/src/main/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${basedir}/hekate-standalone/src/main/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>

        <!-- Third party licenses.  -->
        <fileSet>
            <directory>${basedir}/license</directory>
            <outputDirectory>license</outputDirectory>
        </fileSet>

        <!-- Project license.  -->
        <fileSet>
            <directory>${basedir}</directory>
            <includes>
                <include>LICENSE.txt</include>
                <include>NOTICE.txt</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-core</include>
                <include>io.hekate:hekate-standalone</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/spring</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-spring</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/kryo</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-codec-kryo</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/fst</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-codec-fst</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/influxdb</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-metrics-influxdb</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/statsd</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-metrics-statsd</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/jclouds</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-jclouds-core</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/jclouds-aws</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>

            <includes>
                <include>io.hekate:hekate-jclouds-aws</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>